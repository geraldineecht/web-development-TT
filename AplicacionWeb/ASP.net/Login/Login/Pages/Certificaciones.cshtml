@page
@model Atos.Pages.CertificacionesModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://unpkg.com/flowbite@1.4.5/dist/flowbite.min.css" />

    <link rel="stylesheet" href="~/css/certificaciones.css">
    <script src="https://kit.fontawesome.com/ce9bb4ca53.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="-body-container bg-primary bg-gray-900">
        <header class="header-container">
            <nav class="navbar">
                <div class="nav-container">
                    <a href="#" id="nav-logo"><img class="img-attributes" src="~/img/LogoBlanco.png" alt=""></a>
                </div>
            </nav>
        </header>
    </div>

    <div class="grid xl:grid-cols-9  md:grid-cols-6 sm:grid-cols-1 xl:gap-8">
        <div id="progress-bar" class="xl:col-span-3 md:col-span-2 bg-gray-atos">
            <div class="left-section">
                <div class="progress-container">
                    <div class="task-container">
                        <ul class="task-list">
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/Informacion_personal">Información Personal</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/Informacion_de_contacto">Información de Contacto</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/Sobre_mi">Sobre Mí</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/Experiencia_profesional">Experiencia Profesional</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/formacion_academica">Formación Académica</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/Idiomas">Idiomas</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check selected-color"></i>
                                    <a id="selected-task">Certificaciones</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle"></i>
                                    <a>Enviar</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>

        <div id="progress-bar-menu" class="mt-9 mx-4">
            <div class="w-full bg-gray-200 rounded-full dark:bg-gray-700">
                <div class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-full" style="width: 87.5%"> 87.5%</div>
            </div>
        </div>

        <div class="xl:col-span-6 md:col-span-4 -bg-blue-400">
            <div class="right-section -bg-gray-200 ">
                <div class="form-container">
                    <div class="title-container">
                        <h1 class="text-3xl font-bold">Certificaciones</h1>
                        <p>Ingresa los siguientes datos solicitados para poder dirigirte a la siguiente seccion.</p>
                    </div>

                    <form>
                        <div class="grid gap-4 mb-4 lg:grid-cols-3">
                            <div class="input-box lg:col-span-2">
                                <input asp-for="Certi1" type="text" placeholder="Certificación" id="certi1" name="certi1">
                            </div>

                            <div class="input-box">
                                <input  asp-for="Anio1" type="text" placeholder="Año" id="anio1" name="anio1">
                            </div>
                        </div>

                        <div class="grid gap-4 mb-4 lg:grid-cols-3" id="addCerti2" style="display: none;">
                            <div class="input-box lg:col-span-2">
                                <input asp-for="Certi2" type="text" placeholder="Certificación" id="certi2" name="certi2">
                            </div>

                            <div class="input-box">
                                <input asp-for="Anio2" type="text" placeholder="Año" id="anio2" name="anio2">
                            </div>
                        </div>

                        <div class="grid gap-4 mb-4 lg:grid-cols-3" id="addCerti3" style="display: none;">
                            <div class="input-box lg:col-span-2">
                                <input asp-for="Certi3" type="text" placeholder="Certificación" id="certi3" name="certi3">
                            </div>

                            <div class="input-box">
                                <input  asp-for="Anio3" type="text" placeholder="Año" id="anio3" name="anio3">
                            </div>
                        </div>

                        <div class="grid gap-4 mb-4 lg:grid-cols-3" id="addCerti4" style="display: none;">
                            <div class="input-box lg:col-span-2">
                                <input asp-for="Certi4" type="text" placeholder="Certificación" id="certi4" name="certi4">
                            </div>

                            <div class="input-box">
                                <input  asp-for="Anio4" type="text" placeholder="Año" id="anio4" name="anio4">
                            </div>
                        </div>

                        <div class="grid gap-4 mb-4 lg:grid-cols-3" id="addCerti5" style="display: none;">
                            <div class="input-box lg:col-span-2">
                                <input asp-for="Certi5" type="text" placeholder="Certificación" id="certi5" name="certi5">
                            </div>

                            <div class="input-box">
                                <input asp-for="Anio5"  type="text" placeholder="Año" id="anio5" name="anio5">
                            </div>
                        </div>

                        <div class="grid gap-4 mb-4 lg:grid-cols-3" id="addCerti6" style="display: none;">
                            <div class="input-box lg:col-span-2">
                                <input asp-for="Certi6" type="text" placeholder="Certificación" id="certi6" name="certi6">
                            </div>

                            <div class="input-box">
                                <input  asp-for="Anio6" type="text" placeholder="Año" id="anio6" name="anio6">
                            </div>
                        </div>

                        <div class="grid gap-4 mb-4 lg:grid-cols-3" id="addCerti7" style="display: none;">
                            <div class="input-box lg:col-span-2">
                                <input asp-for="Certi7" type="text" placeholder="Certificación" id="certi7" name="certi7">
                            </div>

                            <div class="input-box">
                                <input  asp-for="Anio7" type="text" placeholder="Año" id="anio7" name="anio7">
                            </div>
                        </div>

                        <div class="grid gap-4 mb-4 lg:grid-cols-3" id="addCerti8" style="display: none;">
                            <div class="input-box lg:col-span-2">
                                <input asp-for="Certi8" type="text" placeholder="Certificación" id="certi8" name="certi8">
                            </div>

                            <div class="input-box">
                                <input  asp-for="Anio8" type="text" placeholder="Año" id="anio8" name="anio8">
                            </div>
                        </div>



                        <div class="line-container" id="remover">
                            <button class="add-button" type="button" onclick="addCertificacion2()">＋ Añadir</button>
                        </div>

                        <div class="line-container" id="button2" style="display: none;">
                            <button class="add-button" type="button" onclick="addCertificacion3()">＋ Añadir</button>
                        </div>

                        <div class="line-container" id="button3" style="display: none;">
                            <button class="add-button" type="button" onclick="addCertificacion4()">＋ Añadir</button>
                        </div>

                        <div class="line-container" id="button4" style="display: none;">
                            <button class="add-button" type="button" onclick="addCertificacion5()">＋ Añadir</button>
                        </div>

                        <div class="line-container" id="button5" style="display: none;">
                            <button class="add-button" type="button" onclick="addCertificacion6()">＋ Añadir</button>
                        </div>

                        <div class="line-container" id="button6" style="display: none;">
                            <button class="add-button" type="button" onclick="addCertificacion7()">＋ Añadir</button>
                        </div>

              

                        <div class="button-container">
                             <input id="Submit1" type="submit" class="next-button" value="Siguiente"/>

                        </div>

                    </form>
                </div>
            </div>
        </div>


    </div>
    <footer class="footer-container display-flex">
        <p>© Atos SE 2022 all rights reserved</p>
    </footer>



    <script src="https://unpkg.com/flowbite@1.4.5/dist/flowbite.js"></script>
    <script src="~/js/Certificaciones.js"></script>

</body>
</html>