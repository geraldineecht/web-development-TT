@page
@model Atos.Pages.formacion_academicaModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formación Académica</title>
    <link rel="stylesheet" href="~/css/formacion-academica.css">
    <script src="https://kit.fontawesome.com/ce9bb4ca53.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="body-container">
        <header class="header-container">
            <nav class="navbar">
                <div class="nav-container">
                    <a href="#" id="nav-logo"><img class="img-attributes" src="~/img/LogoBlanco.png" alt=""></a>
                </div>
            </nav>
        </header>

        <div class="grid section-2">
            <div class="left-section">
                <div class="progress-container">
                    <div class="task-container">
                        <ul class="task-list">
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/Informacion_personal">Información Personal</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/Informacion_de_contacto">Información de Contacto</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/Sobre_mi">Sobre Mí</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check finished-color"></i>
                                    <a id="finished-task" asp-page="/Experiencia_profesional">Experiencia Profesional</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle-check selected-color"></i>
                                    <a id="selected-task">Formación Académica</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle"></i>
                                    <a>Idiomas</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle"></i>
                                    <a>Certificaciones</a>
                                </div>
                            </li>
                            <li>
                                <div class="li-container">
                                    <i class="fa-regular fa-circle"></i>
                                    <a>Enviar</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="right-section">
                <div class="form-container">
                    <div class="box-container">
                        <div class="title-container">
                            <h1>Formación Académica</h1>
                            <p>Ingresa los siguientes datos solicitados para poder dirigirte a la siguiente seccion.</p>
                        </div>

                        <div class="fields-container">
                            <div class="line-container">
                                <div class="input-box">
                                    <span class="details">Institución</span>
                                    <input type="text" placeholder="Institución" id="Institucion" name="Institucion">
                                </div>
                            </div>
                            <div class="line-container">
                                <div class="input-box">
                                    <span class="details">Carrera</span>
                                    <input type="text" placeholder="Carrera" id="Carrera" name="Carrera">
                                </div>
                            </div>
                            <div class="line-container flex-gap">
                                <div class="input-box">
                                    <span class="details">País</span>
                                    <input type="text" placeholder="País" id="pais" name="pais">
                                </div>
                                <div class="input-box">
                                    <span class="details">Estado</span>
                                    <input type="text" placeholder="Estado" id="estado" name="estado">
                                </div>
                            </div>
                            <div class="line-container">
                                <div class="input-box">
                                    <span class="details">Ciudad</span>
                                    <input type="text" placeholder="Ciudad" id="ciudad" name="ciudad">
                                </div>
                            </div>
                            <div class="line-container flex-gap">
                                <div class="input-box">
                                    <span class="details">Fecha de inicio</span>
                                    <input type="text" placeholder="Mes" id="mes" name="mes">
                                </div>
                                <div class="input-box">
                                    <span class="date-caption"> aaa </span>
                                    <input type="text" placeholder="Año" id="Año" name="Año">
                                </div>
                                <div class="input-box">
                                    <span class="details">Fecha de salida</span>
                                    <input type="text" placeholder="Mes" id="Mes" name="Mes">
                                </div>
                                <div class="input-box">
                                    <span class="date-caption"> bbb </span>
                                    <input type="text" placeholder="Año" id="Año" name="Año">
                                </div>
                                <div class="check-box">
                                    <input type="checkbox" id="check" value="check"> <p>Aún estudio aquí</p>
                                </div>
                            </div>
                        </div>
                        <div class="button-container">
                            <a class="back-button" asp-page="/Experiencia_profesional">&larr; &nbsp; Regresar</a>
                            <a class="next-button" asp-page="/Idiomas">Siguiente</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-container"> </div>
</body>
</html>